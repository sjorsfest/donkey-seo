# Application
APP_NAME=DonkeySEO
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
INTEGRATION_API_PREFIX=/api/integration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# Integration API key auth (comma-separated keys for external clients)
INTEGRATION_API_KEYS=replace-with-long-random-key

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/donkeyseo
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=86400

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth (Google + Twitter)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/v1/auth/oauth/google/callback
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_CALLBACK_URL=http://localhost:8000/api/v1/auth/oauth/twitter/callback
OAUTH_STATE_SECRET=change-me-to-a-long-random-secret

# LLM Configuration
# Models are selected automatically based on ENVIRONMENT:
#   all environments -> OpenRouter (via OPENROUTER_API_KEY)
# Embeddings (step 6 clustering) use OpenRouter embeddings:
#   model: qwen/qwen3-embedding-8b (routed via OpenRouter)
DEFAULT_LLM_MODEL=openai:gpt-4-turbo
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key
EMBEDDINGS_MODEL=qwen/qwen3-embedding-8b
EMBEDDINGS_PROVIDER=nebius
EMBEDDINGS_ALLOW_FALLBACKS=false
LLM_MAX_RETRIES=3

# Model Tier Overrides (optional â€” uncomment to customize)
# Three tiers: reasoning (complex), standard (classification), fast (simple)
#
# Development/Staging defaults (all use free DeepSeek):
#   reasoning: openrouter:tngtech/deepseek-r1t2-chimera:free
#   standard:  openrouter:tngtech/deepseek-r1t2-chimera:free
#   fast:      openrouter:tngtech/deepseek-r1t2-chimera:free
#
# Production defaults (all use Claude Sonnet):
#   reasoning: anthropic:claude-sonnet-4-5
#   standard:  anthropic:claude-sonnet-4-5
#   fast:      anthropic:claude-sonnet-4-5
#
# DEV_MODEL_REASONING=openrouter:tngtech/deepseek-r1t2-chimera:free
# DEV_MODEL_STANDARD=openrouter:tngtech/deepseek-r1t2-chimera:free
# DEV_MODEL_FAST=openrouter:tngtech/deepseek-r1t2-chimera:free
# PROD_MODEL_REASONING=anthropic:claude-sonnet-4-5
# PROD_MODEL_STANDARD=anthropic:claude-sonnet-4-5
# PROD_MODEL_FAST=anthropic:claude-sonnet-4-5

# Dynamic Model Selector (OpenRouter + Arena)
# Keep disabled by default until snapshot refresh is operational in your env.
MODEL_SELECTOR_ENABLED=false
MODEL_SELECTOR_SNAPSHOT_PATH=app/agents/model_selection_snapshot.json
# Max price unit: USD per 1M tokens (OpenRouter semantics)
MODEL_SELECTOR_MAX_PRICE_DEV=0
MODEL_SELECTOR_MAX_PRICE_STAGING=0
MODEL_SELECTOR_MAX_PRICE_PROD=0
MODEL_SELECTOR_OPENROUTER_WEIGHT=0.75
MODEL_SELECTOR_ARENA_WEIGHT=0.25
MODEL_SELECTOR_FALLBACK_MODEL=openrouter:google/gemma-3-27b-it:free

# DataForSEO
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# Cloudflare R2 (private brand assets)
CLOUDFLARE_R2_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=your-private-bucket-name
CLOUDFLARE_R2_REGION=auto
BRAND_ASSET_MAX_BYTES=5000000
BRAND_ASSETS_MAX_COUNT=8
SIGNED_URL_TTL_SECONDS=90

# Pipeline worker concurrency (per worker process)
# Recommended starting point:
#   setup=2, discovery=2, content=3 (total max concurrent slices = 7)
SETUP_PIPELINE_TASK_WORKERS=2
SETUP_PIPELINE_TASK_QUEUE_SIZE=100
DISCOVERY_PIPELINE_TASK_WORKERS=2
DISCOVERY_PIPELINE_TASK_QUEUE_SIZE=200
CONTENT_PIPELINE_TASK_WORKERS=3
CONTENT_PIPELINE_TASK_QUEUE_SIZE=300
